{
  "manifest_version": 3,
  "name": "Time Cost Calculator",
  "version": "1.0",
  "description": "Calculate the time cost of products based on user's hourly wage.",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ]
}
